<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/black"
    tools:context=".fragments.YolculukFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/border_yf"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Nereden"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/neredenTextYF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text=""
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/neredenCevap"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_marginHorizontal="12dp"
            android:background="#16000000"/>

        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:background="#FDB813"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Nereye"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/nereyeTextYF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/nereyeCevap"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_marginHorizontal="12dp"
            android:background="#16000000"/>

        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:background="#FDB813"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Ortak Nokta"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/ortakNoktaYF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/ortakNoktaCevap"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_marginHorizontal="12dp"
            android:background="#16000000"/>

        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:background="#FDB813"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Kalkış Saati"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/kalkisSaatiYF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text=""
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/kalkisSaatiCevap"/>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/iptal_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Yolculuğu Bitir"
            android:paddingHorizontal="15dp"
            android:minHeight="0dp"
            android:paddingVertical="13dp"
            android:textColor="@color/white"
            android:id="@+id/yolculuguBitirButton"/>



    </LinearLayout>








</LinearLayout>